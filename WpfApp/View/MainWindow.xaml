<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="ABB EGM Joint control" Height="576" Width="963">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Width" Value="80" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#FFBC4444" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="0" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left side - robot info and control -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0">
                <Label Content="Connection Control:"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Connect to Robot" 
                            Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding IsDisconnected}"
                            Margin="5" Padding="10,5"/>
                    <Button Content="Disconnect" 
                            Command="{Binding DisconnectCommand}"
                            IsEnabled="{Binding IsConnected}"
                            Margin="5" Padding="10,5"/>
                    <Button Content="Load MOC.cfg" 
                            Command="{Binding LoadMOCCommand}"
                            Margin="5" Padding="10,5"/>
                </StackPanel>
                <Button Content="Show 3D Robot" 
                            Command="{Binding ShowRobot3DCommand}"
                            Margin="5" Padding="10,5"
                            Background="#4CAF50"
                            Foreground="White"/>
            </StackPanel>

            <!-- Current TCP position -->
            <StackPanel Grid.Row="1">
                <Label Content="Current TCP Position:"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="X:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ActTcpX}" Padding="5,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Y:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ActTcpY}" Padding="5,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Z:"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ActTcpZ}" Padding="5,0"/>
                </Grid>
            </StackPanel>

            <!-- Current joints position -->
            <StackPanel Grid.Row="2" Margin="0">
                <Label Content="Current Joints Position:"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Joint 1:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ActJoint1}" Padding="5,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding MinMaxJoint1}" Padding="5,0"/>
                    <WrapPanel Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left">
                        <Button Content="-" Width="20" Command="{Binding SendJ1MinusCommand}" IsEnabled="{Binding IsConnected}"/>
                        <Button Content="+" Width="20" Command="{Binding SendJ1PlusCommand}" IsEnabled="{Binding IsConnected}"/>
                    </WrapPanel>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Joint 2:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ActJoint2}" Padding="5,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding MinMaxJoint2}" Padding="5,0"/>
                    <WrapPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left">
                        <Button Content="-" Width="20" Command="{Binding SendJ2MinusCommand}" IsEnabled="{Binding IsConnected}"/>
                        <Button Content="+" Width="20" Command="{Binding SendJ2PlusCommand}" IsEnabled="{Binding IsConnected}"/>
                    </WrapPanel>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Joint 3:"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ActJoint3}" Padding="5,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding MinMaxJoint3}" Padding="5,0"/>
                    <WrapPanel Grid.Row="2" Grid.Column="3" HorizontalAlignment="Left">
                        <Button Content="-" Width="20" Command="{Binding SendJ3MinusCommand}" IsEnabled="{Binding IsConnected}"/>
                        <Button Content="+" Width="20" Command="{Binding SendJ3PlusCommand}" IsEnabled="{Binding IsConnected}"/>
                    </WrapPanel>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Joint 4:"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ActJoint4}" Padding="5,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding MinMaxJoint4}" Padding="5,0"/>
                    <WrapPanel Grid.Row="3" Grid.Column="3" HorizontalAlignment="Left">
                        <Button Content="-" Width="20" Command="{Binding SendJ4MinusCommand}" IsEnabled="{Binding IsConnected}"/>
                        <Button Content="+" Width="20" Command="{Binding SendJ4PlusCommand}" IsEnabled="{Binding IsConnected}"/>
                    </WrapPanel>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Joint 5:"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ActJoint5}" Padding="5,0"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding MinMaxJoint5}" Padding="5,0"/>
                    <WrapPanel Grid.Row="4" Grid.Column="3" HorizontalAlignment="Left">
                        <Button Content="-" Width="20" Command="{Binding SendJ5MinusCommand}" IsEnabled="{Binding IsConnected}"/>
                        <Button Content="+" Width="20" Command="{Binding SendJ5PlusCommand}" IsEnabled="{Binding IsConnected}"/>
                    </WrapPanel>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Joint 6:"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ActJoint6}" Padding="5,0"/>
                    <TextBlock Grid.Row="5" Grid.Column="2" Text="{Binding MinMaxJoint6}" Padding="5,0"/>
                    <WrapPanel Grid.Row="5" Grid.Column="3" HorizontalAlignment="Left">
                        <Button Content="-" Width="20" Command="{Binding SendJ6MinusCommand}" IsEnabled="{Binding IsConnected}"/>
                        <Button Content="+" Width="20" Command="{Binding SendJ6PlusCommand}" IsEnabled="{Binding IsConnected}"/>
                    </WrapPanel>
                </Grid>
            </StackPanel>

            <!-- New position settings -->
            <StackPanel Grid.Row="3" Margin="0,20,0,0">
                <Label Content="New Robot Position:"/>
            </StackPanel>

            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Joints 1-6 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Joint 1:"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SetJoint1}" IsEnabled="{Binding CanSendCommands}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Joint 2:"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SetJoint2}" IsEnabled="{Binding CanSendCommands}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Joint 3:"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SetJoint3}" IsEnabled="{Binding CanSendCommands}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Joint 4:"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SetJoint4}" IsEnabled="{Binding CanSendCommands}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Joint 5:"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SetJoint5}" IsEnabled="{Binding CanSendCommands}"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Joint 6:"/>
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SetJoint6}" IsEnabled="{Binding CanSendCommands}"/>

                <!-- Send button -->
                <Button Grid.Row="6" Grid.Column="1" Content="SEND JOINTS" 
                           Command="{Binding SendJointCommand}"
                           IsEnabled="{Binding IsConnected}"
                           HorizontalAlignment="Center"
                           Width="80" Margin="0" Padding="10,5"/>
            </Grid>
        </Grid>

        <!-- Right side - console -->
        <StackPanel Grid.Column="1" Margin="10">
            <Label Content="Console"/>
            <TextBox x:Name="ConsoleTextBox" 
                     Text="{Binding ConsoleOutput}"
                     IsReadOnly="True"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     FontFamily="Consolas"
                     FontSize="12"
                     Height="477"
                     Width="Auto"
                     HorizontalAlignment="Stretch">
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Clear console" Command="{Binding ClearConsoleCommand}"/>
                        </ContextMenu>
                     </TextBox.ContextMenu>
            </TextBox>
        </StackPanel>
    </Grid>
</Window>